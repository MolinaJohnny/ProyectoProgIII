<%- include("partials/nav.ejs") %>
<main class="container py-4 text-center">
  <div id="clienteBienvenida" class="mb-3 h4"></div>
  <div class="mb-4 d-flex flex-wrap justify-content-center gap-3 filtros-categorias">
    <form method="GET" action="/lista-productos" class="d-flex flex-wrap gap-2">
      <button type="submit" name="categoria" value="todos" class="btn btn-secondary">
        🛍️ Todos
      </button>
      <button type="submit" name="categoria" value="juegos" class="btn btn-primary">
        🎮 Juegos físicos
      </button>
      <button type="submit" name="categoria" value="keys" class="btn btn-success">
        🔑 Juegos digitales
      </button>
    </form>
    <button onclick="window.location.href= '/mod-producto'"class="btn btn-success">Crear producto</button> 
  </div>

  <div id="listaProductos" class="row justify-content-center g-4">
    <% if (productos.length > 0) { %> <% productos.forEach(producto => { %>
    <div class="card col-md-3 p-3">
      <div class="card-body">
        <h5 class="card-title"><%= producto.nombre %></h5>
        <p class="card-text">💰 Precio: $<%= producto.precio %></p>
        <p class="card-text">📦 Stock: <%= producto.stock %></p>
        <p class="card-text">🏷️ Categoría: <%= producto.categoria %></p>
        <div class="text-center">
          <a
            href="/modificar-producto/<%= producto.id %>"
            class="btn btn-primary col-12 mb-2"
          >
            Modificar
          </a>
          <form
            action="/producto/<%= producto.id %>/toggle-activo"
            method="POST"
            style="display: inline"
          >
            <button
              type="submit"
              class="btn col-12 <%= producto.activo ? 'btn-danger' : 'btn-success' %>"
            >
              <%= producto.activo ? 'Desactivar' : 'Activar' %>
            </button>
          </form>
        </div>
      </div>
    </div>
    <% }) %> <% } else { %>
    <p>No hay productos disponibles.</p>
    <% } %>
  </div>
</main>

<%- include('partials/footer.ejs') %>
