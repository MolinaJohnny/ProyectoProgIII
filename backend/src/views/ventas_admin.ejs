      </tr>
    </thead>
    <tbody>
      <% if (ventas.length > 0) { %> <% ventas.forEach(venta => { %>
      <tr>
        <td><%= venta.nombre %></td>
        <td><%= venta.categoria %></td>
        <td>$<%= venta.precio %></td>
        <td><%= venta.cantidad %></td>
        <td><%= new Date(venta.fecha).toLocaleString() %></td>
      </tr>
      <% }) %> <% } else { %>
      <tr>
        <td colspan="4" class="text-center">No hay ventas registradas.</td>
      </tr>
      <% } %>
    </tbody>
  </table>
  </div>
